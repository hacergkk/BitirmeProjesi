<UserControl x:Class="SearchApplication.Results.ResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SearchApplication.Results"
             xmlns:Converters="clr-namespace:SearchApplication.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="601">
    <UserControl.Resources>
        <Converters:IconToImageSourceConverter x:Key="IconToImageSourceConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid Background="Transparent">
            <Image Source="{Binding Icon, Converter={StaticResource IconToImageSourceConverter}}" HorizontalAlignment="Left" Width="20" Height="20"/>
        </Grid>
        <TextBlock Text="Dosya İsmi" Margin="25,2,0,0" TextTrimming="CharacterEllipsis"/>
        <Separator Margin="25,0,3,0"/>
        <TextBlock Text="Dosyanın Yolu" Margin="25,20,0,0" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
    </Grid>
</UserControl>
